<ul>
  <% @posts.reverse_each do |post| %>
    <li class="post" id="post-<%= post.id %>">
      <h3><%= post.msg %></h3>
      Time Added <%= post.time %>
    </li>


  <form action="/mainpage/<%= post.id %>" method="post">
        <input type='hidden' name='_method' value='DELETE'/>
        <input type="submit" value="Delete" />
  </form>


  <% end %>
</ul>


